<div class="row">
  <div class="span16">
    <div class="row">
      <div class="span7">
      	&nbsp;
      </div>
      <div class="span7">
      	<div class="hero-unit-devolucao">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<h2>Login</h2> 
			 <br>
			  <div class="clearfix">    
		   	     <%= f.label :username %>
				<div class="input">
			     <%= f.text_field :username %>
			    </div>
		      </div>
		      <div class="clearfix">    
		   	     <%= f.label :password %>
				<div class="input">
			     <%= f.password_field :password %>
			    </div>
		      </div>
		      <br>
			  <div><%= f.submit "Logar", :class => "btn medium primary" %></div>
				
		  <% end %>
		  <%= render "devise/shared/links" %>
		</div>
      </div>
      <div class="span2">
      	&nbsp;
      </div>
    </div>
  </div>
</div>

