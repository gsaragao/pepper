<%= form_for @fornecedor do |f| %>
<% if @fornecedor.errors.any? %>
<fieldset id="erros">
   <div class="ui-state-error ui-corner-all" style="padding: 5px; width: 50%">
     <h3><%= t('errors.messages.titulo') %>:</h3>
     <br>
     <ul>
       <% @fornecedor.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
</fieldset>
<% end %>
<br>
<table>
	<tr><td>
          <div class="clearfix">    
   	     <%= f.label :nome %>
		<div class="input">
	     <%= f.text_field :nome %>
	    </div>
      </div>
          <div class="clearfix">    
   	     <%= f.label :telefone %>
		<div class="input">
	     <%= f.text_field :telefone, :alt => 'phone' %>
	    </div>
      </div>
          <div class="clearfix">    
   	     <%= f.label :email %>
		<div class="input">
	     <%= f.text_field :email %>
	    </div>
      </div>
          <div class="clearfix">    
   	     <%= f.label :cidade %>
		<div class="input">
	     	<%= f.select :cidade_id, options_from_collection_for_select(@cidades,:id,:nome, @fornecedor.cidade_id),  
						:include_blank => true %>
	    </div>
      </div>
          <div class="clearfix">    
   	     <%= f.label :endereco %>
		<div class="input">
	     <%= f.text_area :endereco, :rows => 10, :cols => 50 %>
	    </div>
      </div>
     </td><td>
          <div class="clearfix">    
   	     <%= f.label :observacao %>
		<div class="input">
	     <%= f.text_area :observacao, :rows => 10, :cols => 50 %>
	    </div>
      </div>
    </td>
	<td width="40%"></td>
</tr>
</table> 
  <div class="actions">
    <%= f.submit t('botao.salvar'), :class => "btn primary" %>
    <a href="<%= fornecedores_path %>"><button class="btn" name="btnback"><%= t('botao.cancelar')%></button></a>
  </div>
<% end %>

<script>

 $('#fornecedor_nome').focus();
 $('#fornecedor_telefone').setMask();

</script>