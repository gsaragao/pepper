<h2><%= t('app.menu.listagem')%>&nbsp;<%= t('app.menu.compra')%></h2>
<br>
<%= form_for(@compra, :html => { :method => :get }, :url => compras_path) do |f| %>

	<table class="zebra-striped">
	  <tr class="pesquisa">
		<th><%= t('compra.descricao') %>&nbsp;<%= f.text_field :descricao, :style=>'width: 200px;'  %>&nbsp;&nbsp;
  		<%= t('compra.data') %>&nbsp;<%= f.text_field :data, :value => (I18n.l(@compra.data) if @compra.data) %>&nbsp;&nbsp;<%= f.submit t('botao.pesquisar'), :class => "btn primary" %></th>
	 </tr>
	</table>
<% end %>
<% if @compras.size > 0  %>
 <table class="zebra-striped">
  <tr>
   	<th width="20%"><%= t('compra.descricao')%></th>
 	<th width="20%"><%= t('compra.data')%></th>
    <th width="20%"><%= t('compra.total_despesas')%></th>
    <th width="20%"><%= t('compra.observacao')%></th>
   	<th></th>
    <th></th>
    <th></th>
  </tr>

 <% @compras.each do |compra| %>
  <tr>
  	<td style="color:#666"><%= compra.descricao %></td>
	<td style="color:#1E90FF"><%= I18n.l(compra.data) if compra.data %></td>
	<td style="color:#006400"><%= number_to_currency(compra.total_despesas) if compra.total_despesas %></td>
	<td title="<%= compra.observacao %>" style="color:#666"><%= show_obs(compra.observacao) %></td>
    <td style="color:#1E90FF"><%= link_to t('botao.detalhes'), compra %></td>
    <td style="color:#1E90FF"><%= link_to t('botao.editar'), edit_compra_path(compra)%></td>
    <td style="color:#1E90FF"><%= link_to t('botao.excluir'), compra, 
	confirm: 'Tem certeza que deseja excluir esta compra e suas despesas associadas?', method: :delete %></td>
  </tr>
 <% end %>
 </table>
	<div class="apple_pagination">
	    <%= will_paginate @compras, :container => false, :next_label => 'PrÃ³ximo', :previous_label => 'Anterior' %>
	</div>
<% end %>

<br />

<a href="<%= new_compra_path %>">
	<button class="btn" name="btnpesquisa"><%= t('compra.acao.novo')%></button></a>

